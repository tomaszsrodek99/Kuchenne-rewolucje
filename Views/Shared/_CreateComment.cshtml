@model Kuchenne_rewolucje.Dtos.CommentDto

    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="AddComment" asp-controller="Comment" method="post" class="d-flex flex-column align-items-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UserId" type="text" name="UserId" hidden />
                <input asp-for="ArticleId" type="text" name="ArticleId" hidden />
                <input asp-for="Username" type="text" name="Username" hidden />
                <div class="form-group">
                    <textarea asp-for="Content" name="Content" placeholder="Napisz coś.." class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="add-comment" type="submit" class="btn btn-primary">Napisz coś!</button>
                </div>
            </form>
        </div>
    </div>



