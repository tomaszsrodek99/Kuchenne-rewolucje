@model Kuchenne_rewolucje.Models.Rating

<form asp-action="UpdateRating" asp-controller="Article" method="post" class="d-flex flex-column align-items-center">
    <input asp-for="UserId" type="text" name="UserId" hidden />
    <input asp-for="ArticleId" type="text" name="ArticleId" hidden />
    <div class="form-group">
        <label class="control-label">Ocena:</label>
        <input id="rating-input" type="number" name="Value" class="form-control" hidden />
        <div id="star-rating" class="star-rating"></div>
        <span id="rating-value" class="text-muted"></span>
    </div>
    <div class="form-group">
        <div class="btn-group">
            <button type="button" class="btn btn-dark" style="margin-right: 10px;" onclick="CloseForm()">Wstecz</button>
            <button type="submit" class="btn btn-primary">Dodaj ocenę</button>
        </div>
    </div>
</form>

