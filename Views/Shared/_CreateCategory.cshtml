@model Kuchenne_rewolucje.Dtos.CategoryDto

<form asp-action="AddCategory" asp-controller="Category" method="post" class="my-form d-flex flex-column">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Name"></label>
        <input id="category-name" asp-for="Name" type="text" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="btn-group">
            <button id="go-back" type="button" class="btn btn-dark" style="margin-right: 10px;">Wstecz</button>
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
</form>

