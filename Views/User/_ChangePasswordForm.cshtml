@model Kuchenne_rewolucje.Dtos.UserRegisterRequestDto

<form asp-action="ChangePassword" asp-controller="User" method="post" class="my-form" style="margin-right: 0;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" value="@Model.Id" hidden />
    <div class="form-group">
        <label class="control-label" asp-for="Password">Nowe hasło</label>
        <input asp-for="Password" type="password" name="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zmień hasło</button>
</form>