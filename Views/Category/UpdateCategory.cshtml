@model Kuchenne_rewolucje.Dtos.CategoryDto
@{
    ViewData["Title"] = "Edytuj kategorię";
    Layout = "_UserLayout";
}

@await Html.PartialAsync("_Alerts")

<div class="text-center">
    <div class="row">
        <div class="offset-4 col-4">
            <form asp-action="UpdateCategory" asp-controller="Category" method="post" class="my-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="text" name="Id" class="form-control" value="@Model.Id" hidden/>
                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input id="category-name" asp-for="Name" type="text" name="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="btn-group">
                        <button id="go-back" type="button" class="btn btn-dark" onclick="goBack()" style="float: left; margin-right: 5px;">Wstecz</button>
                        <button type="submit" class="btn btn-primary">Edytuj</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

